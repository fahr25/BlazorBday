@page "/shop/gifts"
@using BlazorBday.Models
@using BlazorBday.Services
@using BlazorBday.Repositories
@inject OrderStateService OrderState
@inject IProductRepository ProductRepo
@inject ICategoryRepository CategoryRepo
@inject ISubcategoryRepository SubcategoryRepo
@inject NavigationManager Nav
@rendermode InteractiveServer

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-9">
            <StepIndicator CurrentStep="7" />

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Step 7: Select Gifts</h3>
                </div>
                <div class="card-body">
                    <ErrorAlert ErrorMessage="@errorMessage" OnClear="@(() => errorMessage = null)" />

                    <p class="lead">Use your remaining <strong>@OrderState.PointsRemaining points</strong> to choose gifts!</p>

                    <!-- Filters -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Filter Gifts</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <label for="subcategoryId" class="form-label">Category</label>
                                    <select id="subcategoryId" @bind="selectedSubcategoryId" @bind:after="ApplyFilters" class="form-select">
                                        <option value="0">All Categories</option>
                                        @foreach (var sub in subcategories)
                                        {
                                            <option value="@sub.Id">@sub.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label for="minPoints" class="form-label">Min Points</label>
                                    <input type="number" id="minPoints" @bind="minPoints" @bind:after="ApplyFilters" class="form-control" min="0" />
                                </div>
                                <div class="col-md-4">
                                    <label for="maxPoints" class="form-label">Max Points</label>
                                    <input type="number" id="maxPoints" @bind="maxPoints" @bind:after="ApplyFilters" class="form-control" min="0" />
                                </div>
                            </div>
                            <div class="mt-3">
                                <button type="button" class="btn btn-secondary" @onclick="ClearFilters">Clear Filters</button>
                            </div>
                        </div>
                    </div>

                    @if (isLoading)
                    {
                        <div class="text-center p-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-2">Loading gifts...</p>
                        </div>
                    }
                    else if (filteredProducts.Count == 0)
                    {
                        <div class="alert alert-info">
                            <p>No gifts match your current filters. Try adjusting the filters above.</p>
                        </div>
                    }
                    else
                    {
                        <div class="row row-cols-1 row-cols-md-3 g-4">
                            @foreach (var product in filteredProducts)
                            {
                                <div class="col">
                                    <ProductCard Product="@product"
                                                 OnSelect="@HandleProductSelected"
                                                 IsDisabled="@(OrderState.PointsRemaining < product.Points)"
                                                 ButtonText="Add to Cart" />
                                </div>
                            }
                        </div>
                    }

                    <div class="mt-4 d-grid">
                        <button class="btn btn-success btn-lg" @onclick="ProceedToReview">
                            Proceed to Review Cart
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <PointsCart />
        </div>
    </div>
</div>

@code {
    private List<Product> allGifts = new();
    private List<Product> filteredProducts = new();
    private List<Subcategory> subcategories = new();
    private string? errorMessage;
    private bool isLoading = true;

    private int selectedSubcategoryId = 0;
    private int? minPoints = null;
    private int? maxPoints = null;

    protected override async Task OnInitializedAsync()
    {
        await OrderState.InitializeAsync();

        // Prerequisite check
        if (!OrderState.CanSelectGifts)
        {
            Nav.NavigateTo("/shop/treat");
            return;
        }

        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        isLoading = true;

        try
        {
            // Get Gifts category
            var categories = await CategoryRepo.GetAllAsync();
            var giftCategory = categories.FirstOrDefault(c => c.Name == "Gifts");

            if (giftCategory != null)
            {
                // Load subcategories
                var allSubcategories = await SubcategoryRepo.GetAllAsync();
                subcategories = allSubcategories
                    .Where(s => s.CategoryId == giftCategory.Id && s.IsActive)
                    .OrderBy(s => s.DisplayOrder)
                    .ThenBy(s => s.Name)
                    .ToList();

                // Load all gift products
                var allProducts = await ProductRepo.GetAllAsync();
                allGifts = allProducts
                    .Where(p => p.CategoryId == giftCategory.Id && p.Inventory > 0)
                    .OrderBy(p => p.Name)
                    .ToList();

                // Apply initial filters
                ApplyFilters();
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Failed to load gifts. Please try again.";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ApplyFilters()
    {
        filteredProducts = allGifts;

        // Filter by subcategory
        if (selectedSubcategoryId > 0)
        {
            filteredProducts = filteredProducts.Where(p => p.SubcategoryId == selectedSubcategoryId).ToList();
        }

        // Filter by min points
        if (minPoints.HasValue && minPoints.Value > 0)
        {
            filteredProducts = filteredProducts.Where(p => p.Points >= minPoints.Value).ToList();
        }

        // Filter by max points
        if (maxPoints.HasValue && maxPoints.Value > 0)
        {
            filteredProducts = filteredProducts.Where(p => p.Points <= maxPoints.Value).ToList();
        }
    }

    private void ClearFilters()
    {
        selectedSubcategoryId = 0;
        minPoints = null;
        maxPoints = null;
        ApplyFilters();
    }

    private async Task HandleProductSelected(Product product)
    {
        try
        {
            // Check if user has enough points
            if (OrderState.PointsRemaining < product.Points)
            {
                errorMessage = "Not enough points remaining for this item.";
                return;
            }

            // Add selected gift
            var cartItem = new CartItem
            {
                ProductId = product.Id,
                ProductName = product.Name,
                CategoryName = "Gifts",
                UnitPoints = product.Points,
                Quantity = 1
            };

            await OrderState.AddItemAsync(cartItem);
        }
        catch (Exception ex)
        {
            errorMessage = "Failed to add gift. Please try again.";
        }
    }

    private void ProceedToReview()
    {
        Nav.NavigateTo("/shop/review");
    }
}
