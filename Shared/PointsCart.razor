@using BlazorBday.Services
@inject OrderStateService OrderState
@implements IDisposable

<div class="card shadow-sm sticky-top" style="top: 20px;">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0">Your Cart</h5>
    </div>
    <div class="card-body">
        <!-- Points Summary -->
        <div class="alert alert-info mb-3">
            <div class="d-flex justify-content-between">
                <span>Total Points:</span>
                <strong>@OrderState.PointsAssigned</strong>
            </div>
            <div class="d-flex justify-content-between">
                <span>Used:</span>
                <strong>@OrderState.PointsUsed</strong>
            </div>
            <hr class="my-2"/>
            <div class="d-flex justify-content-between">
                <span>Remaining:</span>
                <strong class="text-primary">@OrderState.PointsRemaining</strong>
            </div>
        </div>

        <!-- Cart Items -->
        @if (OrderState.Items.Any())
        {
            <h6>Items in Cart:</h6>
            <ul class="list-group mb-3">
                @foreach (var item in OrderState.Items)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">@item.ProductName</div>
                            <small class="text-muted">@item.CategoryName</small>
                            <div class="text-primary">@item.UnitPoints pts</div>
                        </div>
                        <button type="button"
                                class="btn btn-sm btn-outline-danger"
                                @onclick="async () => await RemoveItem(item.ProductId)"
                                title="Remove">
                            ×
                        </button>
                    </li>
                }
            </ul>

            <!-- Progress Checklist -->
            <div class="card bg-light">
                <div class="card-body p-2">
                    <h6 class="mb-2">Progress:</h6>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" disabled checked="@OrderState.HasCard" />
                        <label class="form-check-label small">Card @(OrderState.HasCard ? "✓" : "")</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" disabled checked="@OrderState.HasBook" />
                        <label class="form-check-label small">Book @(OrderState.HasBook ? "✓" : "")</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" disabled checked="@OrderState.HasTreat" />
                        <label class="form-check-label small">Treat @(OrderState.HasTreat ? "✓" : "")</label>
                    </div>
                </div>
            </div>
        }
        else
        {
            <p class="text-muted text-center">Your cart is empty</p>
        }
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        await OrderState.InitializeAsync();
        OrderState.OnChange += StateHasChanged;
    }

    private async Task RemoveItem(int productId)
    {
        await OrderState.RemoveItemAsync(productId);
    }

    public void Dispose()
    {
        OrderState.OnChange -= StateHasChanged;
    }
}