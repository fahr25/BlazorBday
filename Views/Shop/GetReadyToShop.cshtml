@model BlazorBday.Models.OrderDraft
@{
    Layout = "_ShopLayout";
    ViewData["Title"] = "Get Ready to Shop!";
}

<style>
    body {
        background: linear-gradient(180deg, #C8B5E8 0%, #FFB8B8 100%);
        min-height: 100vh;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow" style="border-radius: var(--radius);">
                <div class="card-header text-white" style="background-color: var(--brand); border-radius: var(--radius) var(--radius) 0 0;">
                    <h3 class="mb-0">Get Ready to Shop!</h3>
                </div>
                <div class="card-body">
                    <div class="alert" style="background-color: var(--accent); border: none; border-radius: 12px;">
                        <h4>Your Shopping Points: <strong>@Model.PointsAssigned points</strong></h4>
                        <p class="mb-0">Agency: <strong>@Model.AgencyName</strong></p>
                    </div>

                    <h5 class="mt-4">How Shopping Works:</h5>
                    <ol class="lead">
                        <li><strong>Select a Card</strong> - Choose one special birthday card</li>
                        <li><strong>Select a Book</strong> - Pick one book to enjoy</li>
                        <li><strong>Select a Sweet Treat</strong> - Choose one delicious treat</li>
                        <li><strong>Select Gifts</strong> - Use your remaining points to pick gifts!</li>
                    </ol>

                    <div class="alert" style="background-color: var(--accent); border: none; border-radius: 12px;">
                        <strong>Remember:</strong> You must select a card, book, and treat before choosing gifts.
                        Your cart will show your remaining points as you shop!
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <a asp-action="SelectCard" class="btn btn-lg" style="background-color: var(--brand); color: white; border: none; border-radius: 25px; font-weight: 600;">Start Shopping!</a>
                        <a asp-action="DemographicIntake" class="btn" style="background-color: var(--muted); color: white; border: none; border-radius: 25px;">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
