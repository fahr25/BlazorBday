@model BlazorBday.Models.OrderDraft


@{
    Layout = "_ShopLayout";
    ViewData["Title"] = "Select Your Agency";
}

<style>
    body {
        background: linear-gradient(180deg, #C8B5E8 0%, #FFB8B8 100%);
        min-height: 100vh;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow" style="border-radius: var(--radius);">
                <div class="card-header text-white" style="background-color: var(--brand); border-radius: var(--radius) var(--radius) 0 0;">
                    <h3 class="mb-0">Welcome to the Birthday Market!</h3>
                </div>
                <div class="card-body">
                    <p class="lead">Please select your agency and enter your unique 3-letter code to begin shopping.</p>

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    <form method="post" asp-action="SelectAgency">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label for="agencyId" class="form-label">Select Your Agency</label>
                            <select id="agencyId" name="agencyId" class="form-select" required>
                                <option value="">-- Select Agency --</option>
                                @foreach (var agency in ViewBag.Agencies)
                                {
                                    <option value="@agency.Id">@agency.Name</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="threeLetterCode" class="form-label">3-Letter Agency Code</label>
                            <input type="text"
                                   id="threeLetterCode"
                                   name="threeLetterCode"
                                   class="form-control text-uppercase"
                                   maxlength="3"
                                   minlength="3"
                                   pattern="[A-Za-z]{3}"
                                   placeholder="ABC"
                                   required />
                            <small class="form-text text-muted">Enter the unique 3-letter code provided by your agency.</small>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-lg" style="background-color: var(--brand); color: white; border: none; border-radius: 25px; font-weight: 600;">Continue</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Auto-uppercase the code input
    document.getElementById('threeLetterCode').addEventListener('input', function(e) {
        e.target.value = e.target.value.toUpperCase();
    });
</script>
