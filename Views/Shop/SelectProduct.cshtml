@model List<BlazorBday.Models.Product>
@{
    var categoryName = ViewData["CategoryName"]?.ToString() ?? "Product";
    var stepNumber = ViewData["StepNumber"]?.ToString() ?? "4";
    var stepTitle = ViewData["StepTitle"]?.ToString() ?? "Select a Product";
    ViewData["Title"] = stepTitle;
}

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Main Product Area -->
        <div class="col-md-9">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Step @stepNumber: @stepTitle</h3>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    @if (Model.Count == 0)
                    {
                        <div class="alert alert-warning">
                            <p>No @categoryName.ToLower() are currently available. Please contact an administrator.</p>
                        </div>
                    }
                    else
                    {
                        <p class="lead">Choose one @categoryName.ToLower().TrimEnd('s') to add to your cart.</p>

                        <div class="row row-cols-1 row-cols-md-3 g-4">
                            @foreach (var product in Model)
                            {
                                <div class="col">
                                    <div class="card h-100">
                                        @if (!string.IsNullOrEmpty(product.Image))
                                        {
                                            <img src="@product.Image" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: contain; padding: 10px;">
                                        }
                                        else
                                        {
                                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                                <span class="text-muted">No Image</span>
                                            </div>
                                        }
                                        <div class="card-body">
                                            <h5 class="card-title">@product.Name</h5>
                                            <p class="card-text">@product.Description</p>
                                            @if (product.MinAge > 0 || product.MaxAge > 0)
                                            {
                                                <p class="text-muted small">Age: @product.MinAge-@product.MaxAge</p>
                                            }
                                            <p class="text-primary fw-bold">@product.Points points</p>
                                            <p class="text-muted small">In stock: @product.Inventory</p>
                                        </div>
                                        <div class="card-footer">
                                            <form method="post" asp-action="AddItem">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="productId" value="@product.Id" />
                                                <input type="hidden" name="categoryName" value="@categoryName" />
                                                <input type="hidden" name="returnAction" value="Select@categoryName.TrimEnd('s')" />
                                                <button type="submit" class="btn btn-primary w-100">Select This @categoryName.TrimEnd('s')</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Cart Summary Sidebar -->
        <div class="col-md-3">
            @await Html.PartialAsync("_CartSummary")
        </div>
    </div>
</div>
