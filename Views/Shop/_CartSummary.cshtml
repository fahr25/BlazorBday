@using BlazorBday.Models
@using System.Text.Json
@{
    // Retrieve OrderDraft from session
    var sessionStr = Context.Session.GetString("OrderDraft");
    var draft = string.IsNullOrEmpty(sessionStr) ? new OrderDraft() : JsonSerializer.Deserialize<OrderDraft>(sessionStr);
}

<div class="card shadow-sm cart-summary-card" style="border-radius: var(--radius);">
    <div class="card-header text-white" style="background-color: var(--brand); border-radius: var(--radius) var(--radius) 0 0;">
        <h5 class="mb-0">Your Cart</h5>
    </div>
    <div class="card-body">
        <!-- Points Summary -->
        <div class="alert mb-3" style="background-color: var(--accent); border: none; border-radius: 12px;">
            <div class="d-flex justify-content-between">
                <span>Total Points:</span>
                <strong>@draft.PointsAssigned</strong>
            </div>
            <div class="d-flex justify-content-between">
                <span>Used:</span>
                <strong>@draft.PointsUsed</strong>
            </div>
            <hr/>
            <div class="d-flex justify-content-between">
                <span>Remaining:</span>
                <strong style="color: var(--brand);">@draft.PointsRemaining</strong>
            </div>
        </div>

        <!-- Cart Items -->
        @if (draft.Items.Any())
        {
            <h6>Items in Cart:</h6>
            <ul class="list-group mb-3">
                @foreach (var item in draft.Items)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">@item.ProductName</div>
                            <small class="text-muted">@item.CategoryName</small>
                            <div style="color: var(--brand);">@item.UnitPoints pts</div>
                        </div>
                        <form method="post" asp-action="RemoveItem" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <input type="hidden" name="returnAction" value="@ViewContext.RouteData.Values["action"]" />
                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Remove">×</button>
                        </form>
                    </li>
                }
            </ul>

            <!-- Progress Checklist -->
            <div class="card bg-light">
                <div class="card-body p-2">
                    <h6 class="mb-2">Progress:</h6>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" disabled checked="@draft.HasCard" />
                        <label class="form-check-label small">Card @(draft.HasCard ? "✓" : "")</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" disabled checked="@draft.HasBook" />
                        <label class="form-check-label small">Book @(draft.HasBook ? "✓" : "")</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" disabled checked="@draft.HasTreat" />
                        <label class="form-check-label small">Treat @(draft.HasTreat ? "✓" : "")</label>
                    </div>
                </div>
            </div>
        }
        else
        {
            <p class="text-muted text-center">Your cart is empty</p>
        }
    </div>
</div>
