@model BlazorBday.Models.OrderDraft

@{
    Layout = "_ShopLayout";
    ViewData["Title"] = "Tell Us About Your Child";
}

<style>
    body {
        background: linear-gradient(180deg, #C8B5E8 0%, #FFB8B8 100%);
        min-height: 100vh;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow" style="border-radius: var(--radius);">
                <div class="card-header text-white" style="background-color: var(--brand); border-radius: var(--radius) var(--radius) 0 0;">
                    <h3 class="mb-0">Tell Us About Your Child</h3>
                </div>
                <div class="card-body">
                    <p class="lead">We need your child's date of birth to calculate their shopping points.</p>
                    <p class="text-muted">No personal information is collected. We only use this to determine point allocation.</p>

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    <div class="alert" style="background-color: var(--accent); border: none; border-radius: 12px;">
                        <strong>Points Allocation:</strong><br/>
                        Children ages 0-11: <strong>65 points</strong><br/>
                        Children ages 12-18: <strong>100 points</strong>
                    </div>

                    <form method="post" asp-action="DemographicIntake">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label for="childDateOfBirth" class="form-label">Child's Date of Birth</label>
                            <input type="date"
                                   id="childDateOfBirth"
                                   name="childDateOfBirth"
                                   class="form-control"
                                   max="@DateTime.Today.ToString("yyyy-MM-dd")"
                                   min="@DateTime.Today.AddYears(-18).ToString("yyyy-MM-dd")"
                                   required />
                            <small class="form-text text-muted">Child must be between 0 and 18 years old.</small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-lg" style="background-color: var(--brand); color: white; border: none; border-radius: 25px; font-weight: 600;">Calculate Points & Continue</button>
                            <a asp-action="SelectAgency" class="btn" style="background-color: var(--muted); color: white; border: none; border-radius: 25px;">Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
