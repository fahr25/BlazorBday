@model BlazorBday.Models.OrderDraft

@{
    Layout = "_ShopLayout";
    ViewData["Title"] = "Review Your Order";
}

<style>
    body {
        background: linear-gradient(180deg, #C8B5E8 0%, #FFB8B8 100%);
        min-height: 100vh;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow" style="border-radius: var(--radius);">
                <div class="card-header text-white" style="background-color: var(--brand); border-radius: var(--radius) var(--radius) 0 0;">
                    <h3 class="mb-0">Review Your Order</h3>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    <!-- Order Summary -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Agency Information</h5>
                            <p><strong>Agency:</strong> @Model.AgencyName</p>
                            <p><strong>Code:</strong> @Model.ThreeLetterCode</p>
                        </div>
                        <div class="col-md-6">
                            <h5>Points Summary</h5>
                            <p><strong>Total Points:</strong> @Model.PointsAssigned</p>
                            <p><strong>Points Used:</strong> @Model.PointsUsed</p>
                            <p><strong>Points Remaining:</strong> @Model.PointsRemaining</p>
                        </div>
                    </div>

                    <!-- Cart Items -->
                    <h5>Your Items</h5>

                    <!-- Desktop Table View -->
                    <div class="table-responsive d-none d-md-block">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Category</th>
                                    <th>Product</th>
                                    <th>Points</th>
                                    <th>Qty</th>
                                    <th>Subtotal</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>@item.CategoryName</td>
                                        <td>@item.ProductName</td>
                                        <td>@item.UnitPoints</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.Subtotal</td>
                                        <td>
                                            <form method="post" asp-action="RemoveItem" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="productId" value="@item.ProductId" />
                                                <input type="hidden" name="returnAction" value="Review" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="4" class="text-end"><strong>Total:</strong></td>
                                    <td><strong>@Model.PointsUsed points</strong></td>
                                    <td></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <!-- Mobile Card View -->
                    <div class="d-md-none">
                        @foreach (var item in Model.Items)
                        {
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <h6 class="card-title mb-1">@item.ProductName</h6>
                                            <small class="text-muted">@item.CategoryName</small>
                                        </div>
                                        <span class="badge bg-primary">@item.Subtotal pts</span>
                                    </div>
                                    <div class="row g-2 mb-2">
                                        <div class="col-6">
                                            <small class="text-muted d-block">Unit Points</small>
                                            <strong>@item.UnitPoints</strong>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted d-block">Quantity</small>
                                            <strong>@item.Quantity</strong>
                                        </div>
                                    </div>
                                    <form method="post" asp-action="RemoveItem">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <input type="hidden" name="returnAction" value="Review" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger w-100">Remove Item</button>
                                    </form>
                                </div>
                            </div>
                        }
                        <div class="card bg-light">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <strong>Total:</strong>
                                    <strong class="text-primary">@Model.PointsUsed points</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="d-grid gap-2">
                        <form method="post" asp-action="Checkout">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-lg w-100" style="background-color: var(--brand); color: white; border: none; border-radius: 25px; font-weight: 600;">Complete Order</button>
                        </form>
                        <a asp-action="SelectGifts" class="btn" style="background-color: var(--muted); color: white; border: none; border-radius: 25px;">Continue Shopping</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
