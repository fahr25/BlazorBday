@model BlazorBday.Models.OrderDraft
@{
    ViewData["Title"] = "Review Your Order";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h3 class="mb-0">Review Your Order</h3>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    <!-- Order Summary -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Agency Information</h5>
                            <p><strong>Agency:</strong> @Model.AgencyName</p>
                            <p><strong>Code:</strong> @Model.ThreeLetterCode</p>
                        </div>
                        <div class="col-md-6">
                            <h5>Points Summary</h5>
                            <p><strong>Total Points:</strong> @Model.PointsAssigned</p>
                            <p><strong>Points Used:</strong> @Model.PointsUsed</p>
                            <p><strong>Points Remaining:</strong> @Model.PointsRemaining</p>
                        </div>
                    </div>

                    <!-- Cart Items -->
                    <h5>Your Items</h5>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Category</th>
                                <th>Product</th>
                                <th>Points</th>
                                <th>Qty</th>
                                <th>Subtotal</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.CategoryName</td>
                                    <td>@item.ProductName</td>
                                    <td>@item.UnitPoints</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Subtotal</td>
                                    <td>
                                        <form method="post" asp-action="RemoveItem" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="productId" value="@item.ProductId" />
                                            <input type="hidden" name="returnAction" value="Review" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="4" class="text-end"><strong>Total:</strong></td>
                                <td><strong>@Model.PointsUsed points</strong></td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>

                    <!-- Actions -->
                    <div class="d-grid gap-2">
                        <form method="post" asp-action="Checkout">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success btn-lg w-100">Complete Order</button>
                        </form>
                        <a asp-action="SelectGifts" class="btn btn-secondary">Continue Shopping</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
