@model BlazorBday.Models.Subcategory

@{
    ViewData["Title"] = "Subcategory Details";
}

<h1>Subcategory Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Category</dt>
        <dd class="col-sm-9">@Model.Category.Name</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Display Order</dt>
        <dd class="col-sm-9">@Model.DisplayOrder</dd>

        <dt class="col-sm-3">Active</dt>
        <dd class="col-sm-9">@(Model.IsActive ? "Yes" : "No")</dd>
    </dl>

    <div class="mt-3">
        <a asp-action="EditSubcategory" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="DeleteSubcategory" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        <a asp-action="Subcategories" class="btn btn-secondary">Back to List</a>
    </div>
</div>
