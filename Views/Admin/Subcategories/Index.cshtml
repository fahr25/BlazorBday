@model List<BlazorBday.Models.Subcategory>

@{
    ViewData["Title"] = "Manage Subcategories";
}

<h1>Subcategories</h1>

<div class="mb-3">
    <a class="btn btn-primary" asp-action="CreateSubcategory">Create New Subcategory</a>
    <a class="btn btn-secondary" asp-action="Index">Back to Dashboard</a>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr class="table-secondary">
            <th>Order</th>
            <th>Name</th>
            <th>Category</th>
            <th>Description</th>
            <th>Active</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Any())
    {
        foreach (var subcategory in Model)
        {
            <tr>
                <td>@subcategory.DisplayOrder</td>
                <td>@subcategory.Name</td>
                <td>@subcategory.Category.Name</td>
                <td>@subcategory.Description</td>
                <td>@(subcategory.IsActive ? "Yes" : "No")</td>
                <td>
                    <a asp-action="SubcategoryDetails" asp-route-id="@subcategory.Id">Details</a> |
                    <a asp-action="EditSubcategory" asp-route-id="@subcategory.Id">Edit</a> |
                    <a asp-action="DeleteSubcategory" asp-route-id="@subcategory.Id">Delete</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr><td colspan="6">No subcategories found.</td></tr>
    }
    </tbody>
</table>
