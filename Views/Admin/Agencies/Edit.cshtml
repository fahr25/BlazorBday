@model BlazorBday.Models.Agency

@{
    ViewData["Title"] = "Edit Agency";
}

<h1>Edit Agency</h1>

<form asp-action="EditAgency" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ThreeLetterCode" class="form-label"></label>
                <input asp-for="ThreeLetterCode" class="form-control" maxlength="3" />
                <span asp-validation-for="ThreeLetterCode" class="text-danger"></span>
                <div class="form-text">Must be exactly 3 characters</div>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                <label asp-for="IsActive" class="form-check-label"></label>
            </div>

            <div class="mb-3">
                <label asp-for="ProgramAdminFirstName" class="form-label"></label>
                <input asp-for="ProgramAdminFirstName" class="form-control" />
                <span asp-validation-for="ProgramAdminFirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProgramAdminLastName" class="form-label"></label>
                <input asp-for="ProgramAdminLastName" class="form-control" />
                <span asp-validation-for="ProgramAdminLastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ContactEmail" class="form-label"></label>
                <input asp-for="ContactEmail" class="form-control" type="email" />
                <span asp-validation-for="ContactEmail" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" class="form-control" type="tel" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="CurrentExecutiveDirector" class="form-label"></label>
                <input asp-for="CurrentExecutiveDirector" class="form-control" />
                <span asp-validation-for="CurrentExecutiveDirector" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label"></label>
                <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PopulationServed" class="form-label"></label>
                <textarea asp-for="PopulationServed" class="form-control" rows="3"></textarea>
                <span asp-validation-for="PopulationServed" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Notes" class="form-label"></label>
                <textarea asp-for="Notes" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="HasReceivedUniqueId" class="form-check-input" type="checkbox" />
                <label asp-for="HasReceivedUniqueId" class="form-check-label"></label>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="HasSubmittedSubmissions" class="form-check-input" type="checkbox" />
                <label asp-for="HasSubmittedSubmissions" class="form-check-label"></label>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Agencies" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
