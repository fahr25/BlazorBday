@model BlazorBday.Models.Agency

@{
    ViewData["Title"] = "Agency Details";
}

<h1>Agency Details</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name (@Model.ThreeLetterCode)</h5>

        <div class="row mt-4">
            <div class="col-md-6">
                <h6 class="text-muted">Basic Information</h6>
                <dl class="row">
                    <dt class="col-sm-5">Active:</dt>
                    <dd class="col-sm-7">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Yes ✓</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No ✗</span>
                        }
                    </dd>

                    <dt class="col-sm-5">3-Letter Code:</dt>
                    <dd class="col-sm-7"><strong>@Model.ThreeLetterCode</strong></dd>

                    <dt class="col-sm-5">Address:</dt>
                    <dd class="col-sm-7">@Model.Address</dd>

                    <dt class="col-sm-5">Population Served:</dt>
                    <dd class="col-sm-7">@Model.PopulationServed</dd>
                </dl>

                <h6 class="text-muted mt-4">Contact Information</h6>
                <dl class="row">
                    <dt class="col-sm-5">Contact Email:</dt>
                    <dd class="col-sm-7"><a href="mailto:@Model.ContactEmail">@Model.ContactEmail</a></dd>

                    <dt class="col-sm-5">Phone:</dt>
                    <dd class="col-sm-7"><a href="tel:@Model.Phone">@Model.Phone</a></dd>
                </dl>
            </div>

            <div class="col-md-6">
                <h6 class="text-muted">Administrative</h6>
                <dl class="row">
                    <dt class="col-sm-6">Executive Director:</dt>
                    <dd class="col-sm-6">@Model.CurrentExecutiveDirector</dd>

                    <dt class="col-sm-6">Program Admin:</dt>
                    <dd class="col-sm-6">@Model.ProgramAdminFirstName @Model.ProgramAdminLastName</dd>

                    <dt class="col-sm-6">Has Received Unique ID:</dt>
                    <dd class="col-sm-6">
                        @if (Model.HasReceivedUniqueId)
                        {
                            <span class="badge bg-success">Yes ✓</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No ✗</span>
                        }
                    </dd>

                    <dt class="col-sm-6">Has Submitted Submissions:</dt>
                    <dd class="col-sm-6">
                        @if (Model.HasSubmittedSubmissions)
                        {
                            <span class="badge bg-success">Yes ✓</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No ✗</span>
                        }
                    </dd>
                </dl>

                @if (!string.IsNullOrWhiteSpace(Model.Notes))
                {
                    <h6 class="text-muted mt-4">Notes</h6>
                    <p class="text-muted">@Model.Notes</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="EditAgency" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="DeleteAgency" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    <a asp-action="Agencies" class="btn btn-secondary">Back to List</a>
</div>
