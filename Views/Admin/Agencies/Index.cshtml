@model List<BlazorBday.Models.Agency>

@{
    ViewData["Title"] = "Manage Agencies";
}

<h1>Agencies</h1>

<div class="mb-3">
    <a class="btn btn-primary" asp-action="CreateAgency">Create New Agency</a>
    <a class="btn btn-secondary" asp-action="Index">Back to Dashboard</a>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr class="table-secondary">
            <th>Code</th>
            <th>Name</th>
            <th>Contact Email</th>
            <th>Phone</th>
            <th>Active</th>
            <th>Unique ID</th>
            <th>Submissions</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Any())
    {
        foreach (var agency in Model)
        {
            <tr>
                <td>@agency.ThreeLetterCode</td>
                <td>@agency.Name</td>
                <td>@agency.ContactEmail</td>
                <td>@agency.Phone</td>
                <td>@(agency.IsActive ? "✓" : "✗")</td>
                <td>@(agency.HasReceivedUniqueId ? "✓" : "✗")</td>
                <td>@(agency.HasSubmittedSubmissions ? "✓" : "✗")</td>
                <td>
                    <a asp-action="AgencyDetails" asp-route-id="@agency.Id">Details</a> |
                    <a asp-action="EditAgency" asp-route-id="@agency.Id">Edit</a> |
                    <a asp-action="DeleteAgency" asp-route-id="@agency.Id">Delete</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr><td colspan="8">No agencies found.</td></tr>
    }
    </tbody>
</table>
