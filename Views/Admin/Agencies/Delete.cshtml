@model BlazorBday.Models.Agency

@{
    ViewData["Title"] = "Delete Agency";
}

<h1>Delete Agency</h1>

<div class="alert alert-danger">
    <h5>Are you sure you want to delete this agency?</h5>
    <p>This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name (@Model.ThreeLetterCode)</h5>

        <dl class="row mt-3">
            <dt class="col-sm-3">Active:</dt>
            <dd class="col-sm-9">@(Model.IsActive ? "Yes" : "No")</dd>

            <dt class="col-sm-3">3-Letter Code:</dt>
            <dd class="col-sm-9"><strong>@Model.ThreeLetterCode</strong></dd>

            <dt class="col-sm-3">Contact Email:</dt>
            <dd class="col-sm-9">@Model.ContactEmail</dd>

            <dt class="col-sm-3">Phone:</dt>
            <dd class="col-sm-9">@Model.Phone</dd>

            <dt class="col-sm-3">Executive Director:</dt>
            <dd class="col-sm-9">@Model.CurrentExecutiveDirector</dd>

            <dt class="col-sm-3">Program Admin:</dt>
            <dd class="col-sm-9">@Model.ProgramAdminFirstName @Model.ProgramAdminLastName</dd>

            <dt class="col-sm-3">Address:</dt>
            <dd class="col-sm-9">@Model.Address</dd>
        </dl>
    </div>
</div>

<form asp-action="DeleteAgency" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Agencies" class="btn btn-secondary">Cancel</a>
</form>
