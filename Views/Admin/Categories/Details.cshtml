@model BlazorBday.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<h1>Category Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Display Order</dt>
        <dd class="col-sm-9">@Model.DisplayOrder</dd>

        <dt class="col-sm-3">Active</dt>
        <dd class="col-sm-9">@(Model.IsActive ? "Yes" : "No")</dd>
    </dl>

    <h3>Subcategories (@Model.Subcategories.Count)</h3>
    @if (Model.Subcategories.Any())
    {
        <table class="table table-sm table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Display Order</th>
                    <th>Active</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var sub in Model.Subcategories.OrderBy(s => s.DisplayOrder))
            {
                <tr>
                    <td>@sub.Name</td>
                    <td>@sub.DisplayOrder</td>
                    <td>@(sub.IsActive ? "Yes" : "No")</td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No subcategories yet.</p>
    }

    <div class="mt-3">
        <a asp-action="EditCategory" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="DeleteCategory" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        <a asp-action="Categories" class="btn btn-secondary">Back to List</a>
    </div>
</div>
