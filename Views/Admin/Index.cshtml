@model BlazorBday.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>Admin Dashboard</h1>

<div class="mb-4">
    <h3>Quick Actions</h3>
    <div class="btn-group" role="group">
        <a class="btn btn-outline-primary" asp-action="Inventory">View All Inventory</a>
        <a class="btn btn-outline-primary" asp-action="Create">Create New Product</a>
        <a class="btn btn-outline-primary" asp-action="Categories">Manage Categories</a>
        <a class="btn btn-outline-primary" asp-action="Subcategories">Manage Subcategories</a>
        <a class="btn btn-outline-primary" asp-action="Agencies">Manage Agencies</a>
    </div>
    <div>
        @if (User.Identity?.IsAuthenticated == true)
            {
                <li class="nav-item">
                    <span class="nav-link text-muted">@User.Identity.Name</span>
                </li>
                <li class="nav-item">
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-link nav-link text-dark">Logout</button>
                    </form>
                </li>
            }
    </div>
</div>

<div>
    <!-- Inventory Summary Cards -->
    <div class="mb-4">
        <h2>Inventory Summary</h2>
        <div class="row g-3 mb-3">
            <!-- Total Products Card -->
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <h5 class="card-title">Total Products</h5>
                        <h2 class="mb-0">@Model.InventoryStats.TotalProducts</h2>
                    </div>
                </div>
            </div>

            <!-- Low Stock Alert Card -->
            <div class="col-md-3">
                <div class="card @(Model.InventoryStats.LowStockCount > 0 ? "bg-warning text-dark" : "bg-success text-white")">
                    <div class="card-body">
                        <h5 class="card-title">Low Stock</h5>
                        <h2 class="mb-0">
                            @Model.InventoryStats.LowStockCount
                            @if (Model.InventoryStats.LowStockCount > 0)
                            {
                                <small class="fs-6">‚ö†Ô∏è</small>
                            }
                        </h2>
                        <small>Below @Model.InventoryStats.LowStockThreshold units</small>
                    </div>
                </div>
            </div>

            <!-- Out of Stock Card -->
            <div class="col-md-3">
                <div class="card @(Model.InventoryStats.OutOfStockCount > 0 ? "bg-danger text-white" : "bg-success text-white")">
                    <div class="card-body">
                        <h5 class="card-title">Out of Stock</h5>
                        <h2 class="mb-0">
                            @Model.InventoryStats.OutOfStockCount
                            @if (Model.InventoryStats.OutOfStockCount > 0)
                            {
                                <small class="fs-6">üö´</small>
                            }
                        </h2>
                    </div>
                </div>
            </div>

            <!-- Recent Orders Card -->
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <h5 class="card-title">Recent Orders</h5>
                        <h2 class="mb-0">@Model.RecentOrders.Count</h2>
                        <small>Last 20 orders</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Category Breakdown Table -->
        <h3>Inventory by Category</h3>
        <table class="table table-striped table-bordered">
            <thead>
                <tr class="table-secondary">
                    <th>Category</th>
                    <th>Product Count</th>
                    <th>Total Inventory</th>
                    <th>Low Stock Items</th>
                </tr>
            </thead>
            <tbody>
            @if (Model.InventoryStats.CategoryStats.Any())
            {
                foreach (var cat in Model.InventoryStats.CategoryStats.Values)
                {
                    <tr>
                        <td><strong>@cat.CategoryName</strong></td>
                        <td>@cat.ProductCount</td>
                        <td>@cat.TotalInventory</td>
                        <td>
                            @if (cat.LowStockCount > 0)
                            {
                                <span class="badge bg-warning text-dark">@cat.LowStockCount ‚ö†Ô∏è</span>
                            }
                            else
                            {
                                <span class="text-success">‚úì None</span>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="4">No categories found.</td></tr>
            }
            </tbody>
        </table>
    </div>

    <div>
        <h2>Orders (recent)</h2>

        <table class="table table-striped table-bodered">
            <thead>
                <tr class="table-secondary">
                    <th>#</th>
                    <th>Customer</th>
                    <th>Points</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @if (Model.RecentOrders != null && Model.RecentOrders.Any())
            {
                foreach (var o in Model.RecentOrders)
                {
                    <tr>
                        <td>@o.Id</td>
                        <td>@o.CustomerName</td>
                        <td>@o.PointsUsed</td>
                        <td>@o.Status</td>
                        <td>
                            <a asp-controller="AdminOrders" asp-action="Details" asp-route-id="@o.Id">View</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="5">No orders yet.</td></tr>
            }
            </tbody>
        </table>

        <a asp-controller="AdminOrders" asp-action="Index" class="btn btn-link">View all orders</a>
    </div>
    
</div>
