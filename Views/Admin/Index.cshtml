@model BlazorBday.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}



<div>
    <!-- Inventory Summary Cards -->
    <div class="mb-5">
        <h4 class="mb-4">Inventory Overview</h4>
        <div class="row g-4 mb-4">
            <!-- Total Products Card -->
            <div class="col-12 col-sm-6 col-lg-3">
                <div class="card gradient-card gradient-pink text-white">
                    <div class="card-body">
                        <div class="metric-label">Total Products</div>
                        <div class="metric-value">@Model.InventoryStats.TotalProducts</div>
                        <div class="metric-subtitle">All inventory items</div>
                    </div>
                </div>
            </div>

            <!-- Low Stock Alert Card -->
            <div class="col-12 col-sm-6 col-lg-3">
                <div class="card gradient-card @(Model.InventoryStats.LowStockCount > 0 ? "gradient-warning text-dark" : "gradient-teal text-white")">
                    <div class="card-body">
                        <div class="metric-label">Low Stock Items</div>
                        <div class="metric-value">
                            @Model.InventoryStats.LowStockCount
                            @if (Model.InventoryStats.LowStockCount > 0)
                            {
                                <small class="fs-5">‚ö†Ô∏è</small>
                            }
                        </div>
                        <div class="metric-subtitle">Below @Model.InventoryStats.LowStockThreshold units</div>
                    </div>
                </div>
            </div>

            <!-- Out of Stock Card -->
            <div class="col-12 col-sm-6 col-lg-3">
                <div class="card gradient-card @(Model.InventoryStats.OutOfStockCount > 0 ? "gradient-danger" : "gradient-teal") text-white">
                    <div class="card-body">
                        <div class="metric-label">Out of Stock</div>
                        <div class="metric-value">
                            @Model.InventoryStats.OutOfStockCount
                            @if (Model.InventoryStats.OutOfStockCount > 0)
                            {
                                <small class="fs-5">üö´</small>
                            }
                        </div>
                        <div class="metric-subtitle">Need immediate restock</div>
                    </div>
                </div>
            </div>

            <!-- Recent Orders Card -->
            <div class="col-12 col-sm-6 col-lg-3">
                <div class="card gradient-card gradient-blue text-white">
                    <div class="card-body">
                        <div class="metric-label">Recent Orders</div>
                        <div class="metric-value">@Model.RecentOrders.Count</div>
                        <div class="metric-subtitle">Last 20 orders</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Category Breakdown Table -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title mb-3">Inventory by Category</h5>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr class="table-light">
                                <th class="border-0">Category</th>
                                <th class="border-0">Product Count</th>
                                <th class="border-0">Total Inventory</th>
                                <th class="border-0">Low Stock Items</th>
                            </tr>
                        </thead>
                        <tbody>
                        @if (Model.InventoryStats.CategoryStats.Any())
                        {
                            foreach (var cat in Model.InventoryStats.CategoryStats.Values)
                            {
                                <tr>
                                    <td><strong>@cat.CategoryName</strong></td>
                                    <td>@cat.ProductCount</td>
                                    <td>@cat.TotalInventory</td>
                                    <td>
                                        @if (cat.LowStockCount > 0)
                                        {
                                            <span class="badge bg-warning text-dark">@cat.LowStockCount ‚ö†Ô∏è</span>
                                        }
                                        else
                                        {
                                            <span class="text-success fw-semibold">‚úì None</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="4" class="text-center text-muted">No categories found.</td></tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-5">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="card-title mb-0">Recent Orders</h5>
                    <a asp-controller="Admin" asp-action="Orders" class="btn btn-sm btn-outline-primary action-btn">View All Orders</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr class="table-light">
                                <th class="border-0">#</th>
                                <th class="border-0">Customer</th>
                                <th class="border-0">Points</th>
                                <th class="border-0">Status</th>
                                <th class="border-0"></th>
                            </tr>
                        </thead>
                        <tbody>
                        @if (Model.RecentOrders != null && Model.RecentOrders.Any())
                        {
                            foreach (var o in Model.RecentOrders)
                            {
                                <tr>
                                    <td>@o.Id</td>
                                    <td>@o.CustomerName</td>
                                    <td><span class="badge bg-info">@o.PointsUsed pts</span></td>
                                    <td><span class="badge bg-secondary">@o.Status</span></td>
                                    <td>
                                        <a asp-controller="Admin" asp-action="OrderDetails" asp-route-id="@o.Id" class="btn btn-sm btn-outline-primary">View</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="5" class="text-center text-muted">No orders yet.</td></tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
</div>
