<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CelebrateMe</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/app.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlazorBday.styles.css" asp-append-version="true" />
</head>

<body>

    <div class="d-flex">

        <!-- Sidebar-->
        <div class="border-end bg-white">
            <div>
                <img src="/bday-connect-logo.png" alt="logo" height="64px" width="256px" />
            </div>

            <div class="list-group">
                <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-controller="Admin" asp-action="Index">Dashboard</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-controller="Admin" asp-action="Inventory">Inventory</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-controller="Admin" asp-action="Orders">Orders</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-controller="Admin" asp-action="Categories">Categories</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-controller="Admin" asp-action="Agencies">Agencies</a>
            </div>
        </div>
        
        <!-- Page content wrapper-->
        <div id="page-content-wrapper">
            <!-- Top navigation-->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="sidebarToggle">Toggle Menu</button>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <li class="nav-item">
                                    <span class="nav-link text-muted">@User.Identity.Name</span>
                                </li>
                                <li class="nav-item">
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-link nav-link">Logout</button>
                                    </form>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>

            <!-- Page content-->
            <div class="p-4">
                @RenderBody()
            </div>

        </div>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/script.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>