<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CelebrateMe</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/app.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlazorBday.styles.css" asp-append-version="true" />
</head>

<body>

    <button class="btn btn-primary d-lg-none mobile-toggle" id="sidebarToggle" aria-label="Toggle sidebar">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="container-fluid h-100">
        <div class="row h-100">

            <div class="sidebar bg-light" id="sidebar">
                <div class="pt-2 h-100">

                    <div class="menu list-group list-group-flush pt-5">
                        <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-controller="Admin" asp-action="Index">Dashboard</a>
                        <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-controller="Admin" asp-action="Inventory">Inventory</a>
                        <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-controller="Admin" asp-action="Orders">Orders</a>
                        <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-controller="Admin" asp-action="Categories">Categories</a>
                        <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-controller="Admin" asp-action="Agencies">Agencies</a>
                    </div>

                    <div class="m-2">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <span class="text-muted d-block mb-2">Welcome, @User.Identity.Name</span>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-secondary">Logout</button>
                        </form>
                    }


    </div>
                </div>
            </div>

            <div id="page-content-wrapper">
                @RenderBody()
            </div>
        </div>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/script.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>